    currs = ['GBPJPY','GBPUSD', 'EURGBP']
elif news_zone == 'EU':
    currs = [ 'EURUSD', 'EURGBP']
else:
    currs = ['GBPUSD', 'EURUSD', 'USDJPY', 'XAUUSD']


news_min = 0
news_hour = 17
if news_min > 0: news_hour = news_hour+1
close_case = 0

# LOGIN TO MT5
